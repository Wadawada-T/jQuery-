    <script>
        $(function () {
            //$("tr:even").css("background","rgb(111,111,111)");//偶数行变色
            //$("tr:odd").css("background","rgb(123,222,123)")//奇数行变色
           // $("tr:first").css("background","rgb(255,0,0)")//第一行变色

            //addclass() 添加class属性
         /*   $("tr:first").addClass("fir");//给第一个tr class=fir
            $(".fir").css("background","green");*/

         //removeClass()删除某一个值
            $("tr").mouseenter(function () {
              //  $("tr").removeClass("content");
                $(this).toggleClass("content");
            }).mouseleave(function () {

                //toggleClaa() 有此样式就移除，没有就执行添加操作

                $(this).toggleClass("content");
                $("tr").removeClass("content");
            })
        })


    </script>
