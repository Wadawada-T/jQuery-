            //给单选框设置默认值
            $("[type=radio]:last").prop("checked",true);//prop(attr,value), 给选中的对象设置sttr=value
            //给下拉列表设置默认选项
            $("[name=city] :last").prop("selected",true);//先获取到子类
        })
